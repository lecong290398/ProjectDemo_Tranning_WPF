<Page x:Class="WPFNETCORE.CRUD"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFNETCORE"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CRUD">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="1" Grid.ColumnSpan="3" Width="800" Height="250" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <Button Name="btnDelete" FontSize="20" Height="30" Width="60" HorizontalAlignment="Center" VerticalAlignment="Bottom">Xóa</Button>
        <Button Grid.Column="1" Name="btnUpdate" FontSize="20" Height="30" Width="60" HorizontalAlignment="Center" VerticalAlignment="Bottom">Sửa</Button>
        <TextBox  Height="35" ></TextBox>
        <TextBox  Grid.Row="0" Grid.Column="1"  Height="35" ></TextBox>
        <TextBox Height="35" Grid.Row="0" Grid.Column="2"> </TextBox>

    </Grid>
</Page>
