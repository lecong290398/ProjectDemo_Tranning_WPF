        <Label Grid.Row="5" Grid.Column="1" Content="Giới tính" FontWeight="Bold" Foreground="Silver" HorizontalAlignment="Left" FontSize="16"/>
        <CheckBox  Grid.Column="1" Grid.Row="5" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="18" Foreground="White">Nam</CheckBox>
        <CheckBox  Grid.Column="1" Grid.Row="5" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="18" Foreground="White">Nữ</CheckBox>
